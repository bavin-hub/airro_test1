server {
    listen 80;  # or 443 for HTTPS
    server_name airro.in www.airro.in;  # Replace with your domain

    #  Location for your Python application
    location / {
        proxy_pass http://127.0.0.1:5000;  # Or your Python server's port
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}